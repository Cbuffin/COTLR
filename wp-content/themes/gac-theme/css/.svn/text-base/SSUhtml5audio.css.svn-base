.bkplayer {
	background: #002849;
	width: 100%;
	height: 36px;
	float: left;
	border-radius: 4px;
	color: #fff;
	z-index: 100;
	position: relative;
}

/*Play button*/
#songPlay{
}
/*Pause button*/
#songPause{
}
/*Stop button*/
#songStop{

}
/*Play/Pause button*/
.songPlayPauseD{
	width: 16px;
	height: 18px;
	background-image: url(../img/sprite.png);
	background-position: 0 -259px;
	float: left;
	margin: 8px 10px 0 10px;
}
/*Play/Pause button*/
.pause{
	width: 16px;
	height: 18px;
	background-image: url(../img/sprite.png);
	background-position: 0 -278px;
	float: left;
	margin: 8px 10px 0 10px;
}
#songPlayPause{
	width: 16px;
	height: 18px;
	float: left;
}

#songTime {
	float: left;
	margin-top: 5px;
	margin-left: 20px;
	width: 80px;
	font-size: 0.7em;
}
.thesongsliderdiv {
	position: relative;
	top: 11px;
	float: left;
    width: 50%;
    margin-left: 10px;
}
/*Song location slider*/
#songSlider{
    height: 10px;
    background-color: #002849;
    border: 1px solid #F1B744;
    border-radius: 5px;
}
/*Track progress bar*/
#trackProgress{
    width: 0px;
    height: 10px;
    background-color: #F1B744;
    border-radius: 3px;
}
/*Volume Up Button*/
#volumeUp{

}
/*Volume Down Button*/
#volumeDown{

}

.thevolumesliderdiv {
	position: relative;
	float: right;
	margin-right: 10px;
	top: 11px;
    width: 20%;
}
/*Volume Meter*/
#volumeMeter{
    height: 10px;
    background-color: #002849;
    border: 1px solid #F1B744;
    border-radius: 5px;
}
/*Volume Location Meter*/
#volumeStatus{
    height: 10px;
    background-color: #F1B744;
    border-radius: 3px;
}

audio {
	display: none;
